.popup-modal {
  position: fixed;
  top: 0;
  bottom: 0;
  height: 100%;
  width: 100%;
  z-index: 1000;
  overflow: hidden;
  background-color: rgba(0, 0, 0, 0.5);
  -webkit-transition: opacity 300ms;
  transition: opacity 300ms;
  opacity: 0;
}
.popup-modal.fadein {
  opacity: 1;
}
.popup {
  position: fixed;
  bottom: -75%;
  height: 75%;
  width: 100%;
  z-index: 1000;
  background-color: #fff;
  -webkit-transition: bottom 300ms;
  transition: bottom 300ms;
}
.popup.slide {
  bottom: 0;
}
