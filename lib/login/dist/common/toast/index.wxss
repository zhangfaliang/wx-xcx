.ui-toast {
  position: fixed;
  width: 100%;
  top: 40%;
  z-index: 1000;
  text-align: center;
}
.ui-toast .text {
  display: inline-block;
  margin: 0 auto;
  line-height: 40rpx;
  font-size: 32rpx;
  max-width: 60%;
  min-width: 25%;
  border-radius: 15rpx;
  padding: 40rpx 30rpx;
  background-color: rgba(17, 17, 17, 0.7);
  color: #fff;
  -webkit-transition: opacity 400ms;
  transition: opacity 400ms;
  opacity: 0;
}
.ui-toast .text.fadein {
  opacity: 1;
}
