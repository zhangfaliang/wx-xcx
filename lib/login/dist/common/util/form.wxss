.form-group-wrap {
  margin-top: 62rpx;
  padding-left: 30rpx;
}
.form-group-wrap .form-group {
  padding-right: 30rpx;
  line-height: 88rpx;
  display: flex;
  color: #666;
  font-size: 28rpx;
  border-bottom: 1px solid #D8D8D8;
}
.form-group-wrap .form-spec {
  line-height: 58rpx;
  display: flex;
  color: #ccc;
  font-size: 22rpx;
}
.form-group-wrap .label {
  width: 160rpx;
}
.form-group-wrap .label view {
  display: inline-block;
}
.form-group-wrap .input {
  flex: 1;
  height: 88rpx;
  color: #222;
}
.form-group-wrap .placeholder {
  color: #ccc;
}
.btn {
  margin: 50rpx 30rpx 0 30rpx;
  height: 88rpx;
  line-height: 88rpx;
  color: #fff;
  font-size: 30rpx;
  background-color: #FE5A4C;
}
.btn-blue {
  color: #1C7CD3;
}
