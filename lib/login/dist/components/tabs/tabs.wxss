.flex {
  display: flex;
}
.flex-auto {
  flex: auto;
}
.center {
  text-align: center;
}
.m-tabs {
  background: #f7f7f7;
  line-height: 96rpx;
  border-bottom: 2rpx solid #d6d6d6;
}
.cell {
  margin: 0 auto;
  color: #222;
  font-size: 34rpx;
}
.check {
  color: #C60A1E;
  font-weight: bold;
  position: relative;
}
.check:after {
  left: 0;
  right: 0;
  bottom: -1rpx;
  height: 4rpx;
  position: absolute;
  border-bottom: 4rpx solid #C60A1E;
  box-shadow: 0 6rpx 12rpx rgba(254, 90, 76, 0.45);
  content: "";
  z-index: 1;
}
