<form wx:if="{{type == 'code'}}" class="m-form" bindsubmit="submit">
    <view class="form-group-wrap">
        <view class="form-group" bindtap="selectCountryCode" data-spider-action-name="selectCountryCode">
            <label for="J_phone" class="label">+{{countryCode}}</label>
            <view class="name">
                {{countryName}}
            </view>
            <view class="icon-arrow"></view>
            <input type="text" class="hide" name="countryCode" value="{{countryCode}}"/>
        </view>

        <view class="form-group">
            <label class="label">手机号</label>
            <input focus="true" id="J_phone" name="phone" value="{{phone}}" class="input" placeholder-class="placeholder" type="number" placeholder="填写手机号码" bindinput="onInputPhone"/>
            <view class="{{sendMsgCodeClass}}" data-spider-action-name="sendMsgCode" bindtap="sendMsgCode">{{sendMsgCodeText}}</view>
        </view>

        <view class="form-group">
            <label for="J_code" class="label">验证码</label>
            <input focus="true" id="J_code" class="input" name="vcode" value="{{vcode}}" type="number" placeholder-class="placeholder" placeholder="请输入6位验证码" maxlength="6" bindinput="onInputCode"/>
        </view>
        <view class="form-spec">未注册的手机号验证后将自动进行注册</view>
    </view>
    <button class="btn {{(!phone || !vcode)? 'disabled' : ''}}" disabled="{{!phone || !vcode}}" formType="submit">登录</button>
</form>
<include src="../../common/toast/index.wxml"/>
<include src="../../components/countrycode/countrycode.wxml"/>
</view>