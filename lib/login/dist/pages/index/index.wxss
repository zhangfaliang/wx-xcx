.ui-toast {
  position: fixed;
  width: 100%;
  top: 40%;
  z-index: 1000;
  text-align: center;
}
.ui-toast .text {
  display: inline-block;
  margin: 0 auto;
  line-height: 40rpx;
  font-size: 32rpx;
  max-width: 60%;
  min-width: 25%;
  border-radius: 15rpx;
  padding: 40rpx 30rpx;
  background-color: rgba(17, 17, 17, 0.7);
  color: #fff;
  -webkit-transition: opacity 400ms;
  transition: opacity 400ms;
  opacity: 0;
}
.ui-toast .text.fadein {
  opacity: 1;
}
.hide {
  display: none;
}
.modal {
  background-color: rgba(0, 0, 0, 0.6);
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}
.disabled {
  color: #ccc;
}
.wx-login-wrap {
  padding: 0rpx 40rpx;
}
.wx-login-header {
  padding: 90rpx 0;
  text-align: center;
  border-bottom: 1rpx solid #E5E5E5;
}
.wd-logo {
  width: 135rpx;
  height: 72rpx;
  margin: 0 auto;
  background: url(https://si.geilicdn.com/hz_img_60a1000001636d663d050a02853e_135_72_unadjust.png) center no-repeat;
  background-size: 100%;
}
.wx-login-title {
  padding-top: 20rpx;
  padding-bottom: 40rpx;
  font-size: 34rpx;
  color: #000000;
  line-height: 52rpx;
}
.wx-login-info {
  padding-left: 10rpx;
  font-size: 28rpx;
  color: #888888;
  line-height: 42rpx;
}
.wx-login-info:before {
  content: "";
  display: inline-block;
  width: 6rpx;
  height: 6rpx;
  vertical-align: middle;
  margin-right: 10rpx;
  background: #888888;
  border-radius: 100%;
}
.wx-login-btn button {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  margin-top: 72rpx;
  margin-bottom: 40rpx;
  font-size: 36rpx;
  color: #fff;
  background: #1AAD1A;
  border-radius: 10rpx;
}
