.img--wrap {
  width: 100%;
  height: 400rpx;
  margin-bottom: 30rpx;
  position: relative;
}
.img--wrap image {
  width: 100%;
  height: 100%;
}
.img--wrap .control-btn--image {
  width: 100rpx;
  height: 100rpx;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  z-index: 9999;
}
